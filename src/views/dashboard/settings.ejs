<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إعدادات صفحة الهبوط | واصل</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .admin-layout {
            display: flex;
            min-height: 100vh;
            background: var(--bg-main);
        }

        .admin-sidebar {
            width: 280px;
            background: var(--bg-card);
            border-left: 1px solid var(--border);
            padding: 2rem 0;
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto;
            transition: width 0.3s ease;
        }

        .admin-sidebar.collapsed {
            width: 80px;
        }

        .admin-sidebar.collapsed .admin-brand h2,
        .admin-sidebar.collapsed .admin-brand p,
        .admin-sidebar.collapsed .admin-nav-item span {
            display: none;
        }

        .admin-sidebar.collapsed .admin-nav-item {
            justify-content: center;
            padding: 12px;
        }

        .admin-brand {
            padding: 1.5rem 1rem 2rem;
            border-bottom: 1px solid var(--border);
            margin-bottom: 1.5rem;
        }

        .brand-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
        }

        .admin-sidebar.collapsed .brand-header {
            flex-direction: column;
            gap: 12px;
        }

        .admin-brand h2 {
            color: var(--primary-dark);
            font-size: 1.4rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .admin-nav {
            padding: 0 1rem;
        }

        .admin-nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            margin-bottom: 6px;
            border-radius: var(--radius-sm);
            color: var(--text-muted);
            cursor: pointer;
            transition: 0.2s;
            font-weight: 600;
        }

        .admin-nav-item:hover {
            background: var(--bg-secondary);
            color: var(--primary);
        }

        .admin-nav-item.active {
            background: var(--primary-light);
            color: var(--primary-dark);
        }

        .admin-nav-item i {
            width: 20px;
            text-align: center;
        }

        .admin-content {
            flex: 1;
            padding: 2rem;
            overflow-y: auto;
        }

        .tab-nav {
            display: flex;
            gap: 10px;
            margin-bottom: 2rem;
            border-bottom: 2px solid var(--border);
            padding-bottom: 0;
            flex-wrap: wrap;
        }

        .tab-nav-btn {
            background: transparent;
            border: none;
            padding: 12px 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--text-muted);
            font-weight: 600;
            font-size: 0.95rem;
            border-bottom: 3px solid transparent;
            transition: all 0.3s;
            position: relative;
        }

        .tab-nav-btn:hover {
            color: var(--primary);
            background: var(--bg-secondary);
        }

        .tab-nav-btn.active {
            color: var(--primary);
            border-bottom-color: var(--primary);
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            background: var(--bg-card);
            padding: 30px;
            border-radius: var(--radius-md);
            border: 1px solid var(--border);
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--text-main);
        }

        .form-control {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid var(--border);
            border-radius: var(--radius-sm);
            background: var(--bg-main);
            color: var(--text-main);
            font-family: inherit;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px var(--primary-light);
        }

        textarea.form-control {
            resize: vertical;
            min-height: 100px;
        }

        .btn-save {
            background: var(--primary);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: var(--radius-sm);
            cursor: pointer;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-save:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--text-main);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-title i {
            color: var(--primary);
            font-size: 1.5rem;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 0;
        }

        .checkbox-group input[type="checkbox"] {
            width: 20px;
            height: 20px;
            cursor: pointer;
            accent-color: var(--primary);
        }

        .checkbox-group label {
            margin: 0;
            cursor: pointer;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .alert {
            padding: 12px 16px;
            border-radius: var(--radius-sm);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 500;
        }

        .alert.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .divider {
            height: 1px;
            background: var(--border);
            margin: 2rem 0;
        }

        .profile-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .password-section {
            background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
            padding: 2rem;
            border-radius: var(--radius-md);
            border-left: 4px solid var(--accent);
        }

        .theme-toggle,
        .sidebar-close-btn,
        .sidebar-toggle-btn {
            background: var(--bg-secondary);
            border: 1px solid var(--border);
            width: 40px !important;
            height: 40px !important;
            min-width: 40px !important;
            min-height: 40px !important;
            border-radius: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s;
            color: var(--text-muted);
            flex-shrink: 0;
            padding: 0;
            margin: 0;
        }

        .theme-toggle:hover,
        .sidebar-close-btn:hover,
        .sidebar-toggle-btn:hover {
            background: var(--primary-light);
            color: var(--primary-dark);
            border-color: var(--primary);
        }

        .sidebar-close-btn {
            display: none !important;
        }

        @media (max-width: 1024px) {
            .sidebar-toggle-btn {
                display: flex;
            }

            .sidebar-close-btn {
                display: block !important;
            }

            .admin-layout {
                flex-direction: column;
            }

            .admin-sidebar {
                position: fixed;
                right: -280px;
                top: 0;
                height: 100vh;
                z-index: 1000;
                transition: right 0.3s ease;
                box-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
                width: 280px;
                overflow: hidden;
            }

            .admin-sidebar.open {
                right: 0;
            }

            .admin-content {
                padding: 4rem 1rem 2rem;
            }

            .tab-nav {
                overflow-x: auto;
                padding-bottom: 10px;
                -webkit-overflow-scrolling: touch;
            }

            .tab-nav-btn {
                white-space: nowrap;
                padding: 10px 16px;
                font-size: 0.85rem;
            }

            .card {
                padding: 1.5rem;
            }

            .section-title {
                font-size: 1.1rem;
            }

            .profile-section {
                grid-template-columns: 1fr;
            }

            .btn-save {
                width: 100%;
                justify-content: center;
            }
        }

        @media (max-width: 768px) {
            .admin-sidebar {
                width: 100%;
                right: -100%;
            }

            .admin-content {
                padding: 3.5rem 0.75rem 1rem;
            }

            h1 {
                font-size: 1.5rem;
                margin-bottom: 1.5rem;
            }

            .card {
                padding: 1.2rem;
                margin-bottom: 1.5rem;
            }

            .form-control {
                padding: 10px;
                font-size: 16px;
            }

            .section-title {
                font-size: 1rem;
            }

            .tab-nav-btn {
                padding: 8px 12px;
                font-size: 0.75rem;
            }

            .tab-nav-btn i {
                font-size: 1rem;
            }
        }

        @media (max-width: 480px) {
            .admin-content {
                padding: 3.5rem 0.5rem 1rem;
            }

            h1 {
                font-size: 1.3rem;
            }

            .card {
                padding: 1rem;
            }

            .form-group label {
                font-size: 0.9rem;
            }

            .form-control {
                padding: 8px;
                font-size: 14px;
            }

            .btn-save {
                padding: 10px 16px;
                font-size: 0.9rem;
            }

            .tab-nav {
                gap: 5px;
            }

            .tab-nav-btn {
                padding: 6px 8px;
                font-size: 0.7rem;
            }

            .admin-brand h2 {
                font-size: 1rem;
            }
        }
    </style>
</head>

<body>
    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="admin-brand">
                <div class="brand-header">
                    <h2 style="flex: 1; margin: 0;"><i class="fab fa-whatsapp"></i> لوحة الإدارة</h2>
                    <div style="display: flex; gap: 10px; align-items: center;" class="toolbar-btns">
                        <button class="theme-toggle" onclick="toggleTheme()" title="تبديل الوضع الليلي">
                            <i class="fas fa-moon"></i>
                        </button>
                        <button onclick="toggleAdminSidebar()" class="sidebar-close-btn" title="إغلاق">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <p style="color: var(--text-muted); font-size: 0.85rem; margin-top: 5px;">مرحباً، <%= user.name %>
                </p>
            </div>

            <nav class="admin-nav">
                <div class="admin-nav-item" onclick="window.location.href='/dashboard?tab=dashboard'">
                    <i class="fas fa-chart-line"></i>
                    <span>لوحة المعلومات</span>
                </div>
                <div class="admin-nav-item" onclick="window.location.href='/dashboard?tab=whatsapp'">
                    <i class="fab fa-whatsapp"></i>
                    <span>جلساتي</span>
                </div>
                <div class="admin-nav-item" onclick="window.location.href='/dashboard?tab=payments'">
                    <i class="fas fa-money-bill-wave"></i>
                    <span>طلبات التفعيل</span>
                </div>
                <div class="admin-nav-item" onclick="window.location.href='/dashboard?tab=users'">
                    <i class="fas fa-users"></i>
                    <span>إدارة المستخدمين</span>
                </div>
                <div class="admin-nav-item" onclick="window.location.href='/dashboard?tab=plans'">
                    <i class="fas fa-box"></i>
                    <span>إدارة الباقات</span>
                </div>
                <div class="admin-nav-item" onclick="window.location.href='/dashboard?tab=logs'">
                    <i class="fas fa-history"></i>
                    <span>سجل النشاط</span>
                </div>
                <div class="admin-nav-item active" onclick="window.location.href='/dashboard?tab=settings'">
                    <i class="fas fa-cog"></i>
                    <span>الإعدادات</span>
                </div>
                <div class="admin-nav-item" onclick="window.location.href='/dashboard/islamic-reminders'">
                    <i class="fas fa-mosque"></i>
                    <span>التذكيرات الإسلامية</span>
                </div>
                <div class="admin-nav-item" onclick="window.location.href='/logout'"
                    style="margin-top: 2rem; color: #f44336;">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>تسجيل الخروج</span>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="admin-content">
            <div id="alertContainer"></div>

            <h1 style="margin-bottom: 2rem; color: var(--text-main);">إعدادات صفحة الهبوط</h1>

            <!-- Tab Navigation -->
            <div class="tab-nav">
                <button class="tab-nav-btn active" onclick="switchTab('profile')">
                    <i class="fas fa-user-circle"></i>
                    <span>الملف الشخصي</span>
                </button>
                <button class="tab-nav-btn" onclick="switchTab('landing')">
                    <i class="fas fa-globe"></i>
                    <span>إعدادات الصفحة</span>
                </button>
                <button class="tab-nav-btn" onclick="switchTab('system')">
                    <i class="fas fa-server"></i>
                    <span>النظام</span>
                </button>
            </div>

            <!-- ======== PROFILE TAB ======== -->
            <div id="profile-tab" class="tab-content active">
                <!-- Profile Card -->
                <div class="card">
                    <div class="section-title">
                        <i class="fas fa-user-edit"></i>
                        بيانات الملف الشخصي
                    </div>

                    <form id="profileForm">
                        <div class="profile-section">
                            <div class="form-group">
                                <label for="admin_name">
                                    <i class="fas fa-user"></i> اسم المدير
                                </label>
                                <input type="text" id="admin_name" name="name" class="form-control"
                                    value="<%= user.name %>" placeholder="أدخل اسمك الكامل" required>
                            </div>

                            <div class="form-group">
                                <label for="admin_email">
                                    <i class="fas fa-envelope"></i> البريد الإلكتروني
                                </label>
                                <input type="email" id="admin_email" class="form-control" value="<%= user.email %>"
                                    disabled readonly style="background: var(--bg-secondary); cursor: not-allowed;">
                                <small style="color: var(--text-muted); display: block; margin-top: 5px;">
                                    البريد الإلكتروني لا يمكن تعديله
                                </small>
                            </div>

                            <div class="form-group">
                                <label for="admin_phone">
                                    <i class="fas fa-phone"></i> رقم الهاتف
                                </label>
                                <input type="tel" id="admin_phone" name="phone" class="form-control"
                                    value="<%= user.phone || '' %>" placeholder="أدخل رقم هاتفك">
                            </div>
                        </div>

                        <button type="submit" class="btn-save">
                            <i class="fas fa-save"></i> حفظ البيانات الشخصية
                        </button>
                    </form>
                </div>

                <!-- Password Change Card -->
                <div class="card">
                    <div class="section-title">
                        <i class="fas fa-lock"></i>
                        تغيير كلمة المرور
                    </div>

                    <form id="passwordForm">
                        <div class="form-group">
                            <label for="current_password">
                                <i class="fas fa-key"></i> كلمة المرور الحالية
                            </label>
                            <input type="password" id="current_password" class="form-control"
                                placeholder="أدخل كلمة المرور الحالية" required>
                        </div>

                        <div class="form-group">
                            <label for="new_password">
                                <i class="fas fa-lock"></i> كلمة المرور الجديدة
                            </label>
                            <input type="password" id="new_password" class="form-control"
                                placeholder="أدخل كلمة المرور الجديدة" minlength="6" required>
                            <small style="color: var(--text-muted); display: block; margin-top: 5px;">
                                يجب أن تكون كلمة المرور 6 أحرف على الأقل
                            </small>
                        </div>

                        <div class="form-group">
                            <label for="confirm_password">
                                <i class="fas fa-check-circle"></i> تأكيد كلمة المرور الجديدة
                            </label>
                            <input type="password" id="confirm_password" class="form-control"
                                placeholder="أعد إدخال كلمة المرور الجديدة" required>
                        </div>

                        <button type="submit" class="btn-save">
                            <i class="fas fa-save"></i> تحديث كلمة المرور
                        </button>
                    </form>
                </div>
            </div>

            <!-- ======== LANDING PAGE TAB ======== -->
            <div id="landing-tab" class="tab-content">
                <form id="landingForm">
                    <!-- Brand Identity -->
                    <div class="card">
                        <div class="section-title">
                            <i class="fas fa-id-card"></i>
                            الهوية البصرية
                        </div>

                        <div class="form-group">
                            <label>اسم المنصة</label>
                            <input type="text" name="brand_name" class="form-control"
                                value="<%= settings.brand ? settings.brand.name : 'واصل' %>">
                        </div>
                    </div>

                    <!-- Hero Section -->
                    <div class="card">
                        <div
                            style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                            <div class="section-title" style="margin: 0;">
                                <i class="fas fa-bullhorn"></i>
                                القسم الرئيسي (Hero)
                            </div>
                            <div class="checkbox-group">
                                <input type="checkbox" id="hero_show" name="hero_show" <%=settings.hero.show ? 'checked'
                                    : '' %>>
                                <label for="hero_show">تفعيل</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>العنوان الرئيسي</label>
                            <input type="text" name="hero_title" class="form-control"
                                value="<%= settings.hero.title %>">
                        </div>

                        <div class="form-group">
                            <label>النص الفرعي</label>
                            <textarea name="hero_subtitle" class="form-control"><%= settings.hero.subtitle %></textarea>
                        </div>
                    </div>

                    <!-- Features Section -->
                    <div class="card">
                        <div
                            style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                            <div class="section-title" style="margin: 0;">
                                <i class="fas fa-star"></i>
                                قسم المميزات
                            </div>
                            <div class="checkbox-group">
                                <input type="checkbox" id="features_show" name="features_show" <%=settings.features.show
                                    ? 'checked' : '' %>>
                                <label for="features_show">تفعيل</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>عنوان القسم</label>
                            <input type="text" name="features_title" class="form-control"
                                value="<%= settings.features.title %>">
                        </div>

                        <div class="features-list-editor" style="margin-top: 1.5rem;">
                            <% const features=(settings.features && settings.features.items) ? settings.features.items :
                                []; %>
                                <% for(let i=0; i < 3; i++) { %>
                                    <div class="feature-item-edit"
                                        style="background: var(--bg-secondary); padding: 1rem; border-radius: var(--radius-sm); margin-bottom: 1rem; border: 1px solid var(--border-color);">
                                        <h4 style="margin: 0 0 10px 0; color: var(--text-main); font-size: 0.95rem;">
                                            <i class="fas fa-list-ul"></i> الميزة رقم <%= i + 1 %>
                                        </h4>
                                        <div class="form-group" style="margin-bottom: 0.8rem;">
                                            <input type="text" name="features_items_title[]" class="form-control"
                                                placeholder="عنوان الميزة"
                                                value="<%= features[i] ? features[i].title : '' %>">
                                        </div>
                                        <div class="form-group" style="margin-bottom: 0;">
                                            <textarea name="features_items_desc[]" class="form-control"
                                                placeholder="وصف الميزة"
                                                rows="2"><%= features[i] ? features[i].desc : '' %></textarea>
                                        </div>
                                    </div>
                                    <% } %>
                        </div>
                    </div>

                    <!-- Pricing Section -->
                    <div class="card">
                        <div
                            style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                            <div class="section-title" style="margin: 0;">
                                <i class="fas fa-tags"></i>
                                قسم الأسعار
                            </div>
                            <div class="checkbox-group">
                                <input type="checkbox" id="pricing_show" name="pricing_show" <%=settings.pricing.show
                                    ? 'checked' : '' %>>
                                <label for="pricing_show">تفعيل</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>عنوان القسم</label>
                            <input type="text" name="pricing_title" class="form-control"
                                value="<%= settings.pricing.title %>">
                        </div>
                    </div>

                    <!-- Payment Methods Section -->
                    <div class="card">
                        <div class="section-title">
                            <i class="fas fa-money-bill-wave"></i>
                            إعدادات طرق الدفع
                        </div>
                        <p style="color: var(--text-muted); margin-bottom: 1.5rem;">
                            التحكم في أرقام وتفاصيل طرق الدفع التي تظهر للمستخدم.
                        </p>

                        <!-- Vodafone Cash -->
                        <div
                            style="background: #fdf2f2; padding: 1.5rem; border-radius: var(--radius-md); margin-bottom: 1.5rem; border: 1px solid #e57373;">
                            <div
                                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                                <h3 style="color: #c40000; margin: 0; display: flex; align-items: center; gap: 8px;">
                                    <i class="fas fa-mobile-alt"></i> فودافون كاش
                                </h3>
                                <div class="checkbox-group">
                                    <input type="checkbox" id="vodafone_enabled" name="payment_vodafone_enabled"
                                        <%=(settings.payment && settings.payment.vodafone_cash &&
                                        settings.payment.vodafone_cash.enabled) ? 'checked' : '' %>>
                                    <label for="vodafone_enabled">تفعيل</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>رقم المحفظة</label>
                                <input type="text" name="payment_vodafone_number" class="form-control"
                                    value="<%= (settings.payment && settings.payment.vodafone_cash) ? settings.payment.vodafone_cash.number : '01066284516' %>">
                            </div>
                        </div>

                        <!-- Instapay -->
                        <div
                            style="background: #f3e5f5; padding: 1.5rem; border-radius: var(--radius-md); border: 1px solid #ce93d8;">
                            <div
                                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                                <h3 style="color: #4a148c; margin: 0; display: flex; align-items: center; gap: 8px;">
                                    <i class="fas fa-university"></i> إنستا باي (InstaPay)
                                </h3>
                                <div class="checkbox-group">
                                    <input type="checkbox" id="instapay_enabled" name="payment_instapay_enabled"
                                        <%=(settings.payment && settings.payment.instapay &&
                                        settings.payment.instapay.enabled) ? 'checked' : '' %>>
                                    <label for="instapay_enabled">تفعيل</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>عنوان الدفع (VPA)</label>
                                <input type="text" name="payment_instapay_address" class="form-control"
                                    value="<%= (settings.payment && settings.payment.instapay) ? settings.payment.instapay.address : 'aminkhaled@instapay' %>">
                            </div>

                            <div class="form-group">
                                <label>رقم الهاتف المرتبط (اختياري)</label>
                                <input type="text" name="payment_instapay_phone" class="form-control"
                                    value="<%= (settings.payment && settings.payment.instapay) ? settings.payment.instapay.phone : '' %>">
                            </div>
                        </div>
                    </div>

                    <!-- Contact Info Section -->
                    <div class="card">
                        <div class="section-title">
                            <i class="fas fa-envelope"></i>
                            معلومات التواصل (الدعم الفني)
                        </div>
                        <div class="form-group">
                            <label>رقم واتساب للدعم</label>
                            <input type="text" name="contact_whatsapp" class="form-control"
                                value="<%= (settings.contact && settings.contact.whatsapp) ? settings.contact.whatsapp : '' %>"
                                placeholder="مثال: 2010xxxxxxxx">
                        </div>
                        <div class="form-group">
                            <label>البريد الإلكتروني للدعم</label>
                            <input type="email" name="contact_email" class="form-control"
                                value="<%= (settings.contact && settings.contact.email) ? settings.contact.email : '' %>"
                                placeholder="support@example.com">
                        </div>
                    </div>

                    <!-- Save Button -->
                    <button type="submit" class="btn-save" style="font-size: 1.1rem; padding: 14px 30px;">
                        <i class="fas fa-save"></i> حفظ إعدادات الصفحة
                    </button>
                </form>
            </div>

            <!-- ======== SYSTEM TAB ======== -->
            <div id="system-tab" class="tab-content">
                <div class="card">
                    <div class="section-title">
                        <i class="fas fa-database"></i>
                        النسخ الاحتياطي واستعادة البيانات
                    </div>
                    <p style="color: var(--text-muted); margin-bottom: 1.5rem;">
                        يمكنك تحميل نسخة احتياطية كاملة من قاعدة البيانات للاحتفاظ بها في مكان آمن.
                    </p>

                    <button type="button" class="btn-save" onclick="downloadBackup()"
                        style="background: var(--primary-dark);">
                        <i class="fas fa-download"></i> تحميل نسخة احتياطية (SQLite)
                    </button>
                </div>
                <!-- Database Restore Card -->
                <div class="card" style="margin-top: 20px; border: 1px solid var(--danger);">
                    <div class="card-header" style="justify-content: flex-start; gap: 10px;">
                        <div class="icon-box" style="background: rgba(231, 76, 60, 0.1); color: var(--danger);">
                            <i class="fas fa-upload"></i>
                        </div>
                        <div>
                            <h3 style="margin: 0; font-size: 1.1rem; color: var(--danger);">استعادة النسخة الاحتياطية
                            </h3>
                            <span style="font-size: 0.85rem; opacity: 0.7;">استرجاع النظام من ملف سابق (سيتم حذف
                                البيانات الحالية)</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <form id="restoreForm" style="display: flex; gap: 10px; align-items: center;">
                            <input type="file" id="backupFile" name="backup" accept=".sqlite,.db"
                                style="flex: 1; padding: 10px; border: 1px solid var(--border-color); border-radius: 8px;"
                                required>
                            <button type="submit" class="btn"
                                style="background: var(--danger); color: white; min-width: 120px;">
                                <i class="fas fa-sync-alt"></i> استعادة
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Theme Toggle
        const currentTheme = localStorage.getItem('theme');
        if (currentTheme) {
            document.documentElement.setAttribute('data-theme', currentTheme);
            updateThemeIcon(currentTheme);
        }

        function toggleTheme() {
            let theme = document.documentElement.getAttribute('data-theme');
            let newTheme = theme === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon(newTheme);
        }

        function updateThemeIcon(theme) {
            const icon = document.querySelector('.theme-toggle i');
            if (icon) {
                if (theme === 'dark') {
                    icon.classList.remove('fa-moon');
                    icon.classList.add('fa-sun');
                } else {
                    icon.classList.remove('fa-sun');
                    icon.classList.add('fa-moon');
                }
            }
        }

        // Sidebar Toggle
        function toggleAdminSidebar() {
            const sidebar = document.querySelector('.admin-sidebar');
            sidebar.classList.toggle('open');
        }

        // Tab Switching
        function switchTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-nav-btn').forEach(btn => btn.classList.remove('active'));

            // Activate button
            const tabBtn = document.querySelector(`.tab-nav-btn[onclick="switchTab('${tabName}')"]`);
            if (tabBtn) tabBtn.classList.add('active');

            // Activate content
            const tabContent = document.getElementById(`${tabName}-tab`);
            if (tabContent) tabContent.classList.add('active');
        }


        // Show Alert
        function showAlert(message, type = 'success') {
            const alertContainer = document.getElementById('alertContainer');
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert ${type}`;
            alertDiv.innerHTML = `
    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
    <span>${message}</span>
    `;
            alertContainer.innerHTML = '';
            alertContainer.appendChild(alertDiv);

            if (type === 'success') {
                setTimeout(() => {
                    alertDiv.style.opacity = '0';
                    alertDiv.style.transition = 'opacity 0.3s';
                    setTimeout(() => alertDiv.remove(), 300);
                }, 4000);
            }
        }

        // Profile Form Submission
        document.getElementById('profileForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const name = document.getElementById('admin_name').value;
            const phone = document.getElementById('admin_phone').value;

            if (!name) {
                showAlert('يرجى إدخال الاسم', 'error');
                return;
            }

            try {
                const res = await fetch('/api/admin/profile', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, phone })
                });

                const data = await res.json();

                if (res.ok) {
                    showAlert('✅ تم حفظ البيانات الشخصية بنجاح', 'success');
                } else {
                    showAlert('❌ ' + (data.error || 'حدث خطأ أثناء حفظ البيانات'), 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('❌ حدث خطأ في الاتصال', 'error');
            }
        });

        // Password Form Submission
        document.getElementById('passwordForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const currentPassword = document.getElementById('current_password').value;
            const newPassword = document.getElementById('new_password').value;
            const confirmPassword = document.getElementById('confirm_password').value;

            if (!currentPassword || !newPassword || !confirmPassword) {
                showAlert('⚠️ يرجى ملء جميع حقول كلمة المرور', 'error');
                return;
            }

            if (newPassword.length < 6) { showAlert('⚠️ كلمة المرور الجديدة يجب أن تكون 6 أحرف على الأقل', 'error'); return; }
            if (newPassword !== confirmPassword) {
                showAlert('⚠️ كلمة المرور الجديدة وتأكيدها غير متطابقين', 'error');
                return;
            } try {
                const res = await fetch('/api/admin/change-password', {
                    method: 'POST', headers: {
                        'Content-Type'
                            : 'application/json'
                    }, body: JSON.stringify({ currentPassword: currentPassword, newPassword: newPassword })
                });

                const data = await res.json();

                if (res.ok) {
                    showAlert('✅ تم تغيير كلمة المرور بنجاح! سيتم تسجيل خروجك الآن.', 'success');
                    document.getElementById('current_password').value = '';
                    document.getElementById('new_password').value = '';
                    document.getElementById('confirm_password').value = '';
                    setTimeout(() => {
                        window.location.href = '/logout';
                    }, 2000);
                } else {
                    showAlert('❌ ' + (data.error || 'حدث خطأ أثناء تغيير كلمة المرور'), 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('❌ حدث خطأ في الاتصال', 'error');
            }
        });

        // Landing Form Submission
        document.getElementById('landingForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData(e.target);
            const data = {};

            // Custom serialization to handle array inputs (e.g. features_items_title[])
            for (const [key, value] of formData.entries()) {
                if (data.hasOwnProperty(key)) {
                    if (!Array.isArray(data[key])) {
                        data[key] = [data[key]];
                    }
                    data[key].push(value);
                } else {
                    data[key] = value;
                }
            }

            // Ensure single-item arrays are still arrays if key ends with []
            for (const key in data) {
                if (key.endsWith('[]') && !Array.isArray(data[key])) {
                    data[key] = [data[key]];
                }
            }

            try {
                const res = await fetch('/dashboard/settings', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await res.json();

                if (res.ok && result.success) {
                    showAlert('✅ تم حفظ إعدادات الصفحة بنجاح', 'success');
                } else {
                    showAlert('❌ ' + (result.error || 'حدث خطأ أثناء حفظ الإعدادات'), 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('❌ حدث خطأ في الاتصال', 'error');
            }
        });

        // Download Backup
        function downloadBackup() {
            window.location.href = '/api/admin/backup';
        }

        // Restore Form Submission
        document.getElementById('restoreForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            if (!confirm('⚠️ تحذير: هذه العملية ستحذف قاعدة البيانات الحالية وتستبدلها بالملف المختار.\\n\\nهل أنت متأكد من المتابعة؟')) {
                return;
            }

            const formData = new FormData();
            const fileInput = document.getElementById('backupFile');

            if (fileInput.files.length === 0) {
                showAlert('يرجى اختيار ملف', 'error');
                return;
            }

            formData.append('backup', fileInput.files[0]);

            const btn = e.submitter;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري الاستعادة...';
            btn.disabled = true;

            try {
                const res = await fetch('/api/admin/restore', {
                    method: 'POST',
                    body: formData
                });

                const data = await res.json();

                if (res.ok) {
                    showAlert('✅ تم استعادة النظام بنجاح! سيتم إعادة التحميل...', 'success');
                    setTimeout(() => window.location.reload(), 3000);
                } else {
                    showAlert('❌ ' + (data.error || 'فشل استعادة النسخة الاحتياطية'), 'error');
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('❌ خطأ في الاتصال', 'error');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });

        // Sidebar responsive behavior
        function toggleAdminSidebar() {
            const sidebar = document.querySelector('.admin-sidebar');
            sidebar.classList.toggle('open');
        }

        // Close sidebar when clicking outside
        document.addEventListener('click', function (event) {
            const sidebar = document.querySelector('.admin-sidebar');
            const toggleBtn = document.querySelector('.sidebar-close-btn');

            if (window.innerWidth <= 1024 && sidebar.classList.contains('open')) {
                if (!sidebar.contains(event.target) &&
                    !toggleBtn.contains(event.target)) { sidebar.classList.remove('open'); }
            }
        });

        // Close sidebar when clicking on a nav item
        document.querySelectorAll('.admin-nav-item').forEach(item => {
            item.addEventListener('click', function () {
                if (window.innerWidth <= 1024) {
                    document.querySelector('.admin-sidebar').classList.remove('open');
                }
            });
        });
    </script>

</body>

</html>